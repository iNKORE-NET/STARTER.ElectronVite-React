{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "compilerOptions":
    {
        // "composite": true, // https://stackoverflow.com/questions/60029058/project-must-list-all-files-or-use-an-include-pattern
        "baseUrl": ".",
        "esModuleInterop": true,
        "types": [ "electron-vite/node" ],
        "lib": [ "ES2022" ],
        "module": "ES2022",

        "noUnusedLocals": false,
        "noUnusedParameters": false,

        "paths":
        {
            "sources/*": [ "sources/*" ],
            "common/*": [ "sources/common/*" ],
        }
    }
}
